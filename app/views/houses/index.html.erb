<div class="container p-3">
  <h1>Houses</h1>
</div>
<div class="container">
  <%= link_to "Add house", new_house_path, class: 'btn btn-primary mb-3'  %>
</div>
<div class="container">
  <div class="cards">
    <% @houses.each do |house| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= house[:img_src] %> )">
        <p>#<%= house.id %></p>
        <%= link_to '', house_path(house), class: 'link-card' %>
      </div>
    <% end %>
  </div>
</div>
