<div class="container p-3">
  <h1><%= @house_list.name.capitalize  %></h1>
</div>
<div class="container">
  <%= link_to "Add house", new_house_path, class: 'btn btn-primary mb-3'  %>
</div>
<div class="container">
  <div class="cards">
    <% @house_list.house_comparisons.each do |house_comparison| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= house_comparison.conmment %>
        <%= link_to edit_house_path(house) do %>
          <i class="fa-solid fa-circle-plus"></i>
        <% end %>
        <%= link_to edit_house_comparison_path(house_comparisons) do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
      <%= link_to '', house_path(house), class: 'link-card' %>
    <% end %>
  </div>
</div>
